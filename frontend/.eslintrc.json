{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Office": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "office-addins",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:office-addins/react",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // You can add or override rules here
  }
}
